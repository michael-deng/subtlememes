<h1>Submit new meme</h1>

<%= form_with model: @meme do |form| %>

    <% if @meme.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@meme.errors.count, "error") %> prohibited
            this meme from being saved:
          </h2>
          <ul>
            <% @meme.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

  <p>
    <%= form.label :link %><br>
    <%= form.text_field :link %>
  </p>

  <p>
    <%= form.label :tag %><br>
    <%= form.collection_select(:tag_ids, Tag.all, :id, :name, multiple: true) %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>

<%= link_to 'Back to homepage', memes_path %>